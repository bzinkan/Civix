{
  "jurisdiction": "cincinnati-oh",
  "topic": "business_licenses",
  "title": "Business Licenses and Permits",
  "ordinance_reference": "Chapter 311, 313, 317, 851-880",
  "summary": "Most businesses operating in Cincinnati require various licenses and permits depending on business type and location.",

  "general_business_license": {
    "required": false,
    "notes": "Ohio does not require a general business license. However, specific business types need permits."
  },

  "vendor_license": {
    "required_for": [
      "Street vendors",
      "Food trucks",
      "Mobile vendors",
      "Peddlers"
    ],
    "fee": "$100-500 depending on type",
    "apply_at": "City Hall, License Section",
    "requirements": [
      "Application with business description",
      "Proof of insurance",
      "Health permit (if food)",
      "Vehicle info (if applicable)"
    ]
  },

  "food_service": {
    "health_permit": {
      "required": true,
      "issued_by": "Cincinnati Health Department",
      "fee": "Varies by establishment size",
      "inspections": "Annual, unannounced"
    },
    "food_truck": {
      "city_permit": "Mobile food vendor license",
      "health_permit": "Required",
      "fire_inspection": "Required",
      "parking": "Designated zones or private property with permission"
    },
    "temporary_food_events": {
      "permit": "Temporary food permit",
      "fee": "$35-75",
      "duration": "Single event up to 14 days"
    }
  },

  "alcohol_licenses": {
    "state_license": {
      "issued_by": "Ohio Division of Liquor Control",
      "types": ["D1 (Beer)", "D2 (Wine/Beer)", "D5 (Full Service)", "D6 (Club)"]
    },
    "local_approval": {
      "required": true,
      "process": "City Council approval may be needed",
      "distance_restrictions": "500 feet from schools, churches"
    }
  },

  "home_occupation": {
    "permit_required": false,
    "conditions": [
      "No external evidence of business",
      "No employees on premises",
      "No retail sales to walk-in customers",
      "No more than 25% of home floor area",
      "No noise, odor, traffic beyond residential norms"
    ],
    "prohibited_businesses": [
      "Auto repair",
      "Restaurants",
      "Medical clinics",
      "Manufacturing"
    ]
  },

  "contractor_licenses": {
    "required_trades": [
      "Electrical",
      "Plumbing",
      "HVAC",
      "Roofing",
      "Fire suppression"
    ],
