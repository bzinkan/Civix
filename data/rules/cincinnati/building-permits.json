  "title": "Building Permits and Construction",
  "ordinance_reference": "Chapter 1101-1150, Ohio Building Code",
  "summary": "Most construction, renovation, and structural modifications in Cincinnati require building permits. The type and process depends on scope of work and property location.",

  "when_permit_required": {
    "always_required": [
      "New construction",
      "Additions to existing structures",
      "Structural modifications (load-bearing walls, beams, columns)",
      "Electrical work (new circuits, panel upgrades, rewiring)",
      "Plumbing work (new fixtures, water heater, gas lines)",
      "HVAC installation or replacement",
      "Roofing (full replacement)",
      "Window/door changes affecting structural openings",
      "Deck construction over 30 inches above grade",
      "Basement finishing with egress or electrical",
      "Commercial tenant improvements",
      "Change of use/occupancy"
    ],
    "permit_not_required": [
      "Painting and wallpapering",
      "Flooring replacement (non-structural)",
      "Cabinet replacement (same location)",
      "Minor repairs using same materials",
      "Fences under 6 feet (residential)",
      "Sheds under 120 sq ft (no electric/plumbing)",
      "Replacing fixtures in same location",
      "Landscaping (no grading permit needed)"
    ],
    "gray_areas": {
      "consult_first": [
        "Kitchen remodels (depends on scope)",
        "Bathroom remodels (depends on scope)",
        "Basement waterproofing",
        "Driveway replacement"
      ]
    }
  },

  "permit_types": {
    "building_permit": {
      "description": "General construction, additions, alterations",
      "fee_basis": "Based on project valuation",
      "fee_minimum": 75,
      "plan_review": "Required for projects over $15,000"
    },
    "electrical_permit": {
      "description": "All electrical work",
      "fee_basis": "Based on circuits/fixtures",
      "fee_minimum": 50,
      "licensed_contractor": true
    },
    "plumbing_permit": {
      "description": "All plumbing installations/modifications",
      "fee_basis": "Based on fixtures",
      "fee_minimum": 50,
      "licensed_contractor": true
    },
    "mechanical_permit": {
      "description": "HVAC systems, ductwork, gas piping",
      "fee_basis": "Based on equipment",
      "fee_minimum": 50,
      "licensed_contractor": true
    },
    "demolition_permit": {
      "description": "Full or partial demolition",
      "fee": 150,
      "requirements": ["Asbestos survey", "Utility disconnection proof", "Site plan"]
    },
    "zoning_certificate": {
      "description": "Verifies use is permitted in zone",
      "fee": 75,
