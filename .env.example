# Database Connection
DATABASE_URL=postgresql://user:password@host:5432/database

# Stripe Payment Processing
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# NextAuth
NEXTAUTH_SECRET=

# AI Providers - All three needed for fallback redundancy
# Get your keys from:
# Gemini (Primary): https://aistudio.google.com/apikey (FREE - 1500 requests/day)
# Anthropic (Fallback 1): https://console.anthropic.com/ ($5 free credit)
# OpenAI (Fallback 2): https://platform.openai.com/api-keys ($5 free credit for new accounts)

GEMINI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# AI Configuration
AI_PRIMARY_PROVIDER=gemini
AI_FALLBACK_ENABLED=true

# AWS S3 Configuration (for document storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-2
AWS_S3_BUCKET=civix-documents

