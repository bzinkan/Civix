generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jurisdiction {
  id        String           @id @default(cuid())
  name      String
  state     String
  type      String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  // Legacy models
  zoning    ZoningDistrict[]
  categories RuleCategory[]
  flows     DecisionFlow[]
  rules     Rule[]
  decisions Decision[]
  rulesets  Ruleset[]        @relation(name: "JurisdictionRulesets")

  // Ordinance & regulatory data
  ordinanceDocuments OrdinanceDocument[] @relation(name: "JurisdictionOrdinances")
  ordinanceChunks    OrdinanceChunk[]    @relation(name: "JurisdictionChunks")

  // New comprehensive data
  zoningParcels      ZoningParcel[]      @relation(name: "JurisdictionParcels")
  permitRequirements PermitRequirement[] @relation(name: "JurisdictionPermits")
  buildingCodeChunks BuildingCodeChunk[] @relation(name: "JurisdictionBuildingCodes")
  overlayDistricts   OverlayDistrict[]   @relation(name: "JurisdictionOverlays")
}

model ZoningDistrict {
  id             String        @id @default(cuid())
  code           String
  name           String?
  jurisdictionId String
  jurisdiction   Jurisdiction  @relation(fields: [jurisdictionId], references: [id])
}

model RuleCategory {
  id             String           @id @default(cuid())
  name           String
  slug           String           @unique
  jurisdictionId String
  jurisdiction   Jurisdiction     @relation(fields: [jurisdictionId], references: [id])
  subcategories  RuleSubcategory[]
  rules          Rule[]
}

model RuleSubcategory {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique
  categoryId  String
  category    RuleCategory  @relation(fields: [categoryId], references: [id])
  rules       Rule[]
}

model Rule {
  id             String          @id @default(cuid())
  name           String
  description    String?
  reasoning      String?
  outcome        String
  priority       Int             @default(0)
  condition      Json
  recommendations Json?
  ordinanceCode  String?
  sourceUrl      String?
  jurisdictionId String
  jurisdiction   Jurisdiction    @relation(fields: [jurisdictionId], references: [id])
  flowId         String?
  flow           DecisionFlow?   @relation(fields: [flowId], references: [id])
  categoryId     String?
  category       RuleCategory?   @relation(fields: [categoryId], references: [id])
  subcategoryId  String?
  subcategory    RuleSubcategory? @relation(fields: [subcategoryId], references: [id])
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  ruleQuestions  RuleQuestion[]
  decisionRules  DecisionRule[]
}

model DecisionFlow {
  id             String       @id @default(cuid())
  name           String
  label          String?
  description    String?
  jurisdictionId String
  jurisdiction   Jurisdiction @relation(fields: [jurisdictionId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  questions      Question[]
  rules          Rule[]
  decisions      Decision[]
}

model Question {
  id        String       @id @default(cuid())
  flowId    String
  flow      DecisionFlow @relation(fields: [flowId], references: [id])
  key       String
  prompt    String
  type      String
  order     Int
  required  Boolean      @default(false)
  helpText  String?
  options   Json?
  validation Json?
  branch    Json?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  ruleLinks RuleQuestion[]
  answers   Answer[]

  @@unique([flowId, key])
}

model RuleQuestion {
  id         String   @id @default(cuid())
  ruleId     String
  rule       Rule     @relation(fields: [ruleId], references: [id])
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  required   Boolean  @default(false)
}

model Decision {
  id             String       @id @default(cuid())
  flowId         String
  flow           DecisionFlow @relation(fields: [flowId], references: [id])
  jurisdictionId String
  jurisdiction   Jurisdiction @relation(fields: [jurisdictionId], references: [id])
  outcome        String
  reasoning      Json?
  citations      Json?
  rulesApplied   Json?
  recommendations Json?
  address        String?
  zoneCode       String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  answers        Answer[]
  decisionRules  DecisionRule[]
}

model DecisionRule {
  id         String   @id @default(cuid())
  decisionId String
  decision   Decision @relation(fields: [decisionId], references: [id])
  ruleId     String
  rule       Rule     @relation(fields: [ruleId], references: [id])
  outcome    String
  priority   Int      @default(0)
}

model Answer {
  id         String   @id @default(cuid())
  decisionId String
  decision   Decision @relation(fields: [decisionId], references: [id])
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  value      Json
  createdAt  DateTime @default(now())
}

model User {
  id                    String         @id @default(cuid())
  email                 String         @unique
  name                  String?
  passwordHash          String?
  stripeId              String?

  subscriptionStatus    String         @default("none")
  subscriptionId        String?
  subscriptionEndsAt    DateTime?
  queryCredits          Int            @default(0)

  conversations         Conversation[]
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  @@index([email])
  @@index([subscriptionStatus])
}

model Report {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
}

// ============================================================================
// AI CONVERSATION MODELS (from Civix-v2)
// ============================================================================

model Ruleset {
  id              String        @id @default(cuid())
  jurisdiction    Jurisdiction  @relation(name: "JurisdictionRulesets", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String
  category        String
  version         Int           @default(1)
  isActive        Boolean       @default(true)
  aiRules         AIRule[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([jurisdictionId, category, version])
  @@index([category])
  @@index([jurisdictionId])
}

model AIRule {
  id                  String    @id @default(cuid())
  ruleset             Ruleset   @relation(fields: [rulesetId], references: [id], onDelete: Cascade)
  rulesetId           String
  key                 String
  description         String
  outcome             String
  conditions          Json
  citation            String?
  priority            Int       @default(0)

  subcategory         String?
  canonicalQuestions  String[]
  keywords            String[]
  requiredInputs      String[]

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  citations           Citation[]

  @@unique([rulesetId, key])
  @@index([key])
  @@index([subcategory])
}

model Citation {
  id              String   @id @default(cuid())
  aiRule          AIRule   @relation(fields: [aiRuleId], references: [id], onDelete: Cascade)
  aiRuleId        String

  ordinanceNumber String
  section         String
  title           String?
  text            String   @db.Text
  url             String?
  pageNumber      Int?

  createdAt       DateTime @default(now())

  @@index([aiRuleId])
}

model Conversation {
  id              String    @id @default(cuid())
  user            User?     @relation(fields: [userId], references: [id])
  userId          String?
  fingerprint     String?

  // Ordinance query context
  jurisdictionId  String?
  jurisdictionName String?
  jurisdictionState String?

  category        String?
  subcategory     String?
  collectedInputs Json      @default("{}")

  primaryProvider String    @default("gemini")
  fallbackUsed    Boolean   @default(false)

  status          String    @default("active")

  messages        Message[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?

  @@index([userId])
  @@index([fingerprint])
  @@index([status])
  @@index([jurisdictionId])
}

model Message {
  id              String        @id @default(cuid())
  conversation    Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId  String

  role            String        // 'user' or 'assistant'
  content         String        @db.Text

  // For assistant messages: ordinance sources/citations
  sources         Json?

  provider        String?
  tokensUsed      Int?
  confidence      Float?

  createdAt       DateTime      @default(now())

  @@index([conversationId])
  @@index([createdAt])
}

model AnonymousUsage {
  id            String    @id @default(cuid())
  fingerprint   String    @unique
  queryCount    Int       @default(0)
  lastQueryAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([fingerprint])
  @@index([lastQueryAt])
}

model OrdinanceDocument {
  id              String    @id @default(cuid())
  jurisdiction    Jurisdiction @relation(name: "JurisdictionOrdinances", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  title           String
  s3PdfUrl        String?
  s3TextUrl       String?
  sourceUrl       String?

  lastScraped     DateTime?
  scrapeFrequency String    @default("weekly")
  isActive        Boolean   @default(true)

  chunks          OrdinanceChunk[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([jurisdictionId])
  @@index([isActive])
}

model OrdinanceChunk {
  id              String    @id @default(cuid())
  document        OrdinanceDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId      String
  jurisdiction    Jurisdiction @relation(name: "JurisdictionChunks", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  chapter         String
  section         String?
  title           String
  content         String    @db.Text

  // Vector embedding stored as JSON array (pgvector alternative for compatibility)
  // Will be converted to actual vector type when using pgvector extension
  embedding       Json?

  sourceUrl       String?
  effectiveDate   DateTime?
  lastVerified    DateTime  @default(now())

  chunkIndex      Int       @default(0)
  tokenCount      Int?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([jurisdictionId])
  @@index([documentId])
  @@index([chapter])
  @@index([section])
}

// ============================================================================
// ZONING DATA MODELS
// ============================================================================

model ZoningParcel {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(name: "JurisdictionParcels", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  // Property identification
  address         String
  parcelId        String?      // City's parcel ID (if available)

  // Zoning information
  zoneCode        String       // e.g., "R-1", "C-2"
  zoneDescription String?      // e.g., "Single Family Residential"

  // Geographic data (optional)
  latitude        Float?
  longitude       Float?
  geometry        Json?        // GeoJSON polygon if available

  // Metadata
  sourceUrl       String?      // Link to city's zoning map
  lastVerified    DateTime     @default(now())

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([jurisdictionId])
  @@index([jurisdictionId, address])
  @@index([jurisdictionId, parcelId])
  @@index([zoneCode])
  @@unique([jurisdictionId, parcelId])
}

// ============================================================================
// OVERLAY DISTRICTS (Historic, Hillside, Urban Design, Flood, etc.)
// ============================================================================

model OverlayDistrict {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(name: "JurisdictionOverlays", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  // Overlay type
  overlayType     String       // "historic", "hillside", "urban_design", "flood", "landslide"
  name            String       // e.g., "Over-the-Rhine", "Mt. Adams Hillside"
  description     String?      // Additional details

  // Geographic data
  geometry        Json?        // GeoJSON polygon

  // Additional properties from source
  properties      Json?        // Raw properties from API

  // Metadata
  sourceUrl       String?
  lastVerified    DateTime     @default(now())

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([jurisdictionId])
  @@index([jurisdictionId, overlayType])
  @@index([overlayType])
}

// ============================================================================
// PERMIT REQUIREMENTS
// ============================================================================

model PermitRequirement {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(name: "JurisdictionPermits", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  // What activity this applies to
  activityType    String       // e.g., "fence", "shed", "deck", "addition", "demolition"
  activityDescription String?   // More detailed description

  // Zone-specific (null = applies to all zones)
  zoneCode        String?      // e.g., "R-1", or null for all zones

  // Permit details
  requiresPermit  Boolean
  permitType      String?      // e.g., "Building Permit", "Zoning Certificate"

  // Requirements/restrictions (JSON for flexibility)
  requirements    Json?        // { "maxHeight": 6, "setback": 10, "lotCoverage": 0.3 }

  // Process details
  estimatedFee    Float?       // In dollars
  processingDays  Int?         // Estimated processing time
  documents       String[]     // Required documents

  // Source information
  sourceUrl       String?
  ordinanceRef    String?      // Reference to ordinance section

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([jurisdictionId])
  @@index([jurisdictionId, activityType])
  @@index([jurisdictionId, zoneCode])
  @@index([activityType])
}

// ============================================================================
// BUILDING CODE CHUNKS (Similar to ordinances)
// ============================================================================

model BuildingCodeChunk {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(name: "JurisdictionBuildingCodes", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  codeType        String       // "IBC", "IRC", "local_amendment", "fire_code", "plumbing", "electrical"
  codeYear        String?      // e.g., "2021" for IBC 2021
  section         String
  title           String
  content         String       @db.Text

  // Vector embedding for semantic search
  embedding       Json?

  sourceUrl       String?
  s3PdfUrl        String?      // Link to PDF in S3

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([jurisdictionId])
  @@index([codeType])
  @@index([jurisdictionId, codeType])
}
