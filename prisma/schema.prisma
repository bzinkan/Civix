generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jurisdiction {
  id        String           @id @default(cuid())
  name      String
  state     String
  type      String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  zoning    ZoningDistrict[]
  categories RuleCategory[]
  flows     DecisionFlow[]
  rules     Rule[]
  decisions Decision[]
  rulesets  Ruleset[]        @relation(name: "JurisdictionRulesets")
}

model ZoningDistrict {
  id             String        @id @default(cuid())
  code           String
  name           String?
  jurisdictionId String
  jurisdiction   Jurisdiction  @relation(fields: [jurisdictionId], references: [id])
}

model RuleCategory {
  id             String           @id @default(cuid())
  name           String
  slug           String           @unique
  jurisdictionId String
  jurisdiction   Jurisdiction     @relation(fields: [jurisdictionId], references: [id])
  subcategories  RuleSubcategory[]
  rules          Rule[]
}

model RuleSubcategory {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique
  categoryId  String
  category    RuleCategory  @relation(fields: [categoryId], references: [id])
  rules       Rule[]
}

model Rule {
  id             String          @id @default(cuid())
  name           String
  description    String?
  reasoning      String?
  outcome        String
  priority       Int             @default(0)
  condition      Json
  recommendations Json?
  ordinanceCode  String?
  sourceUrl      String?
  jurisdictionId String
  jurisdiction   Jurisdiction    @relation(fields: [jurisdictionId], references: [id])
  flowId         String?
  flow           DecisionFlow?   @relation(fields: [flowId], references: [id])
  categoryId     String?
  category       RuleCategory?   @relation(fields: [categoryId], references: [id])
  subcategoryId  String?
  subcategory    RuleSubcategory? @relation(fields: [subcategoryId], references: [id])
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  ruleQuestions  RuleQuestion[]
  decisionRules  DecisionRule[]
}

model DecisionFlow {
  id             String       @id @default(cuid())
  name           String
  label          String?
  description    String?
  jurisdictionId String
  jurisdiction   Jurisdiction @relation(fields: [jurisdictionId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  questions      Question[]
  rules          Rule[]
  decisions      Decision[]
}

model Question {
  id        String       @id @default(cuid())
  flowId    String
  flow      DecisionFlow @relation(fields: [flowId], references: [id])
  key       String
  prompt    String
  type      String
  order     Int
  required  Boolean      @default(false)
  helpText  String?
  options   Json?
  validation Json?
  branch    Json?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  ruleLinks RuleQuestion[]
  answers   Answer[]

  @@unique([flowId, key])
}

model RuleQuestion {
  id         String   @id @default(cuid())
  ruleId     String
  rule       Rule     @relation(fields: [ruleId], references: [id])
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  required   Boolean  @default(false)
}

model Decision {
  id             String       @id @default(cuid())
  flowId         String
  flow           DecisionFlow @relation(fields: [flowId], references: [id])
  jurisdictionId String
  jurisdiction   Jurisdiction @relation(fields: [jurisdictionId], references: [id])
  outcome        String
  reasoning      Json?
  citations      Json?
  rulesApplied   Json?
  recommendations Json?
  address        String?
  zoneCode       String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  answers        Answer[]
  decisionRules  DecisionRule[]
}

model DecisionRule {
  id         String   @id @default(cuid())
  decisionId String
  decision   Decision @relation(fields: [decisionId], references: [id])
  ruleId     String
  rule       Rule     @relation(fields: [ruleId], references: [id])
  outcome    String
  priority   Int      @default(0)
}

model Answer {
  id         String   @id @default(cuid())
  decisionId String
  decision   Decision @relation(fields: [decisionId], references: [id])
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  value      Json
  createdAt  DateTime @default(now())
}

model User {
  id                    String         @id @default(cuid())
  email                 String         @unique
  name                  String?
  passwordHash          String?
  stripeId              String?

  subscriptionStatus    String         @default("none")
  subscriptionId        String?
  subscriptionEndsAt    DateTime?
  queryCredits          Int            @default(0)

  conversations         Conversation[]
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  @@index([email])
  @@index([subscriptionStatus])
}

model Report {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
}

// ============================================================================
// AI CONVERSATION MODELS (from Civix-v2)
// ============================================================================

model Ruleset {
  id              String        @id @default(cuid())
  jurisdiction    Jurisdiction  @relation(name: "JurisdictionRulesets", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String
  category        String
  version         Int           @default(1)
  isActive        Boolean       @default(true)
  aiRules         AIRule[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([jurisdictionId, category, version])
  @@index([category])
  @@index([jurisdictionId])
}

model AIRule {
  id                  String    @id @default(cuid())
  ruleset             Ruleset   @relation(fields: [rulesetId], references: [id], onDelete: Cascade)
  rulesetId           String
  key                 String
  description         String
  outcome             String
  conditions          Json
  citation            String?
  priority            Int       @default(0)

  subcategory         String?
  canonicalQuestions  String[]
  keywords            String[]
  requiredInputs      String[]

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  citations           Citation[]

  @@unique([rulesetId, key])
  @@index([key])
  @@index([subcategory])
}

model Citation {
  id              String   @id @default(cuid())
  aiRule          AIRule   @relation(fields: [aiRuleId], references: [id], onDelete: Cascade)
  aiRuleId        String

  ordinanceNumber String
  section         String
  title           String?
  text            String   @db.Text
  url             String?
  pageNumber      Int?

  createdAt       DateTime @default(now())

  @@index([aiRuleId])
}

model Conversation {
  id              String    @id @default(cuid())
  user            User?     @relation(fields: [userId], references: [id])
  userId          String?
  fingerprint     String?

  jurisdiction    String?
  category        String?
  subcategory     String?
  collectedInputs Json      @default("{}")

  primaryProvider String    @default("gemini")
  fallbackUsed    Boolean   @default(false)

  status          String    @default("active")

  messages        Message[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?

  @@index([userId])
  @@index([fingerprint])
  @@index([status])
}

model Message {
  id              String        @id @default(cuid())
  conversation    Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId  String

  role            String
  content         String        @db.Text

  provider        String?
  tokensUsed      Int?
  confidence      Float?

  createdAt       DateTime      @default(now())

  @@index([conversationId])
  @@index([createdAt])
}

model AnonymousUsage {
  id            String    @id @default(cuid())
  fingerprint   String    @unique
  queryCount    Int       @default(0)
  lastQueryAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([fingerprint])
  @@index([lastQueryAt])
}
