generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jurisdiction {
  id        String           @id @default(cuid())
  name      String
  state     String
  type      String
  county    String?          // Legacy string field
  countyRef County?          @relation("CountyJurisdictions", fields: [countyId], references: [id])
  countyId  String?          // New FK to County model
  population Int?
  status    String           @default("planned") // planned, in_progress, live
  dataCompleteness Int       @default(0)         // 0-100 percentage
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  // Legacy models
  zoning    ZoningDistrict[]
  categories RuleCategory[]
  flows     DecisionFlow[]
  rules     Rule[]
  decisions Decision[]
  rulesets  Ruleset[]        @relation(name: "JurisdictionRulesets")

  // Ordinance & regulatory data
  ordinanceDocuments OrdinanceDocument[] @relation(name: "JurisdictionOrdinances")
  ordinanceChunks    OrdinanceChunk[]    @relation(name: "JurisdictionChunks")

  // New comprehensive data
  zoningParcels      ZoningParcel[]      @relation(name: "JurisdictionParcels")
  permitRequirements PermitRequirement[] @relation(name: "JurisdictionPermits")
  buildingCodeChunks BuildingCodeChunk[] @relation(name: "JurisdictionBuildingCodes")
  overlayDistricts   OverlayDistrict[]   @relation(name: "JurisdictionOverlays")
  permitExemptions   PermitExemption[]
  commonQuestions    CommonQuestion[]
  businessChecklists BusinessChecklist[]
  waitlist           Waitlist[]

  @@index([status])
}

// Waitlist for unsupported cities
model Waitlist {
  id              String       @id @default(cuid())
  email           String
  jurisdictionId  String?
  jurisdiction    Jurisdiction? @relation(fields: [jurisdictionId], references: [id])
  cityName        String?
  stateCode       String?
  addressSearched String?
  source          String       @default("address_lookup")
  createdAt       DateTime     @default(now())
  notifiedAt      DateTime?

  @@index([jurisdictionId])
  @@index([email])
}

model ZoningDistrict {
  id             String        @id @default(cuid())
  code           String
  name           String?
  category       String?       // residential, commercial, industrial, downtown, special
  description    String?       @db.Text

  // Lot requirements
  minLotSqft     Int?
  maxLotCoverage Float?        // 0.0 to 1.0

  // Height limits
  maxHeightFt    Int?
  maxStories     Float?        // Can be 2.5 for half-stories

  // Setbacks (in feet)
  frontSetbackFt Int?
  sideSetbackFt  Int?
  rearSetbackFt  Int?

  // Density
  maxFar         Float?        // Floor Area Ratio

  // Allowed uses (JSON array)
  allowedUses    Json?         // ["single_family_home", "home_occupation", ...]

  jurisdictionId String
  jurisdiction   Jurisdiction  @relation(fields: [jurisdictionId], references: [id])

  @@unique([jurisdictionId, code])
  @@index([jurisdictionId])
  @@index([category])
}

model RuleCategory {
  id             String           @id @default(cuid())
  name           String
  slug           String           @unique
  jurisdictionId String
  jurisdiction   Jurisdiction     @relation(fields: [jurisdictionId], references: [id])
  subcategories  RuleSubcategory[]
  rules          Rule[]
}

model RuleSubcategory {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique
  categoryId  String
  category    RuleCategory  @relation(fields: [categoryId], references: [id])
  rules       Rule[]
}

model Rule {
  id             String          @id @default(cuid())
  name           String
  description    String?
  reasoning      String?
  outcome        String
  priority       Int             @default(0)
  condition      Json
  recommendations Json?
  ordinanceCode  String?
  sourceUrl      String?
  jurisdictionId String
  jurisdiction   Jurisdiction    @relation(fields: [jurisdictionId], references: [id])
  flowId         String?
  flow           DecisionFlow?   @relation(fields: [flowId], references: [id])
  categoryId     String?
  category       RuleCategory?   @relation(fields: [categoryId], references: [id])
  subcategoryId  String?
  subcategory    RuleSubcategory? @relation(fields: [subcategoryId], references: [id])
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  ruleQuestions  RuleQuestion[]
  decisionRules  DecisionRule[]
}

model DecisionFlow {
  id             String       @id @default(cuid())
  name           String
  label          String?
  description    String?
  jurisdictionId String
  jurisdiction   Jurisdiction @relation(fields: [jurisdictionId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  questions      Question[]
  rules          Rule[]
  decisions      Decision[]
}

model Question {
  id        String       @id @default(cuid())
  flowId    String
  flow      DecisionFlow @relation(fields: [flowId], references: [id])
  key       String
  prompt    String
  type      String
  order     Int
  required  Boolean      @default(false)
  helpText  String?
  options   Json?
  validation Json?
  branch    Json?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  ruleLinks RuleQuestion[]
  answers   Answer[]

  @@unique([flowId, key])
}

model RuleQuestion {
  id         String   @id @default(cuid())
  ruleId     String
  rule       Rule     @relation(fields: [ruleId], references: [id])
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  required   Boolean  @default(false)
}

model Decision {
  id             String       @id @default(cuid())
  flowId         String
  flow           DecisionFlow @relation(fields: [flowId], references: [id])
  jurisdictionId String
  jurisdiction   Jurisdiction @relation(fields: [jurisdictionId], references: [id])
  outcome        String
  reasoning      Json?
  citations      Json?
  rulesApplied   Json?
  recommendations Json?
  address        String?
  zoneCode       String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  answers        Answer[]
  decisionRules  DecisionRule[]
}

model DecisionRule {
  id         String   @id @default(cuid())
  decisionId String
  decision   Decision @relation(fields: [decisionId], references: [id])
  ruleId     String
  rule       Rule     @relation(fields: [ruleId], references: [id])
  outcome    String
  priority   Int      @default(0)
}

model Answer {
  id         String   @id @default(cuid())
  decisionId String
  decision   Decision @relation(fields: [decisionId], references: [id])
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  value      Json
  createdAt  DateTime @default(now())
}

model User {
  id                    String         @id @default(cuid())
  email                 String         @unique
  name                  String?
  passwordHash          String?
  stripeId              String?

  // User type and role
  role                  String         @default("user")  // user, reviewer, admin, super_admin
  userType              String         @default("homeowner")  // homeowner, contractor, realtor, title, legal, developer, small_business, food_business
  companyName           String?
  licenseNumber         String?        // For contractors

  // Food business specific
  foodBusinessType      String?        // restaurant, food_truck, cottage, ghost_kitchen, bar, farmers_market, catering, brewery
  foodBusinessData      Json?          // Wizard data (stage, hasLiquor, etc.)

  // Subscription
  subscriptionStatus    String         @default("none")
  subscriptionId        String?
  subscriptionPlan      String         @default("free")  // free, pro, business, enterprise
  subscriptionEndsAt    DateTime?
  queryCredits          Int            @default(0)
  monthlyLookups        Int            @default(0)
  lookupResetDate       DateTime?

  // Relations
  conversations         Conversation[]
  savedProperties       SavedProperty[]
  generatedReports      GeneratedReport[]
  checklistProgress     UserChecklistProgress[]
  savedItems            SavedItem[]

  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  @@index([email])
  @@index([subscriptionStatus])
  @@index([userType])
}

// ============================================================================
// SAVED PROPERTIES AND REPORTS
// ============================================================================

model SavedProperty {
  id              String    @id @default(cuid())
  user            User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String?

  address         String
  cityId          String?
  parcelId        String?
  jurisdictionId  String?
  nickname        String?   // "Main St Flip" or "Client Smith Property"

  // Cached data
  zoneCode        String?
  zoneName        String?
  zoneType        String?   // residential, commercial, industrial, downtown, etc.
  zoneDescription String?
  isHistoric      Boolean   @default(false)
  historicDistrict String?
  overlays        Json      @default("[]")
  overlayData     Json?
  lotSize         Int?
  yearBuilt       Int?
  propertyData    Json?     // All property details cached

  // Alerts
  alertOnPermits  Boolean   @default(false)
  alertOnViolations Boolean @default(false)

  notes           String?   @db.Text
  tags            String[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  lastAccessed    DateTime  @default(now())

  // Relations
  conversations   Conversation[]
  savedItems      SavedItem[]

  @@index([userId])
  @@index([address])
}

model GeneratedReport {
  id              String    @id @default(cuid())
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String

  address         String
  reportType      String    // zoning, compliance, title, development_potential
  title           String
  s3Url           String?
  reportData      Json?

  // Sharing
  shareToken      String?   @unique
  isPublic        Boolean   @default(false)
  expiresAt       DateTime?

  createdAt       DateTime  @default(now())

  @@index([userId])
  @@index([shareToken])
}

model Report {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
}

// ============================================================================
// AI CONVERSATION MODELS (from Civix-v2)
// ============================================================================

model Ruleset {
  id              String        @id @default(cuid())
  jurisdiction    Jurisdiction  @relation(name: "JurisdictionRulesets", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String
  category        String
  version         Int           @default(1)
  isActive        Boolean       @default(true)
  aiRules         AIRule[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([jurisdictionId, category, version])
  @@index([category])
  @@index([jurisdictionId])
}

model AIRule {
  id                  String    @id @default(cuid())
  ruleset             Ruleset   @relation(fields: [rulesetId], references: [id], onDelete: Cascade)
  rulesetId           String
  key                 String
  description         String
  outcome             String
  conditions          Json
  citation            String?
  priority            Int       @default(0)

  subcategory         String?
  canonicalQuestions  String[]
  keywords            String[]
  requiredInputs      String[]

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  citations           Citation[]

  @@unique([rulesetId, key])
  @@index([key])
  @@index([subcategory])
}

model Citation {
  id              String   @id @default(cuid())
  aiRule          AIRule   @relation(fields: [aiRuleId], references: [id], onDelete: Cascade)
  aiRuleId        String

  ordinanceNumber String
  section         String
  title           String?
  text            String   @db.Text
  url             String?
  pageNumber      Int?

  createdAt       DateTime @default(now())

  @@index([aiRuleId])
}

model Conversation {
  id              String    @id @default(cuid())
  user            User?     @relation(fields: [userId], references: [id])
  userId          String?
  fingerprint     String?

  // Property context (null = general chat)
  property        SavedProperty? @relation(fields: [propertyId], references: [id])
  propertyId      String?
  title           String?

  // Ordinance query context
  jurisdictionId  String?
  jurisdictionName String?
  jurisdictionState String?

  category        String?
  subcategory     String?
  collectedInputs Json      @default("{}")

  primaryProvider String    @default("gemini")
  fallbackUsed    Boolean   @default(false)

  status          String    @default("active")

  messages        Message[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?

  @@index([userId])
  @@index([fingerprint])
  @@index([status])
  @@index([jurisdictionId])
  @@index([propertyId])
}

model Message {
  id              String        @id @default(cuid())
  conversation    Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId  String

  role            String        // 'user' or 'assistant'
  content         String        @db.Text

  // For assistant messages: ordinance sources/citations
  sources         Json?
  citations       Json?         // [{code, title, excerpt, url}]
  attachments     Json?         // [{name, type, url, description}]
  propertyContext Json?         // property data used for this response

  provider        String?
  tokensUsed      Int?
  confidence      Float?

  createdAt       DateTime      @default(now())

  savedItems      SavedItem[]

  @@index([conversationId])
  @@index([createdAt])
}

// ============================================================================
// SAVED ITEMS (bookmarked answers/docs)
// ============================================================================

model SavedItem {
  id              String        @id @default(cuid())
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  property        SavedProperty? @relation(fields: [propertyId], references: [id])
  propertyId      String?

  itemType        String        // 'answer', 'document', 'citation'
  title           String?
  content         String?       @db.Text
  url             String?
  sourceMessage   Message?      @relation(fields: [sourceMessageId], references: [id])
  sourceMessageId String?

  createdAt       DateTime      @default(now())

  @@index([userId])
  @@index([propertyId])
  @@index([itemType])
}

model AnonymousUsage {
  id            String    @id @default(cuid())
  fingerprint   String    @unique
  queryCount    Int       @default(0)
  lastQueryAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([fingerprint])
  @@index([lastQueryAt])
}

model OrdinanceDocument {
  id              String    @id @default(cuid())
  jurisdiction    Jurisdiction @relation(name: "JurisdictionOrdinances", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  title           String
  s3PdfUrl        String?
  s3TextUrl       String?
  sourceUrl       String?

  lastScraped     DateTime?
  scrapeFrequency String    @default("weekly")
  isActive        Boolean   @default(true)

  chunks          OrdinanceChunk[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([jurisdictionId])
  @@index([isActive])
}

model OrdinanceChunk {
  id              String    @id @default(cuid())
  document        OrdinanceDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId      String
  jurisdiction    Jurisdiction @relation(name: "JurisdictionChunks", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  chapter         String
  section         String?
  title           String
  content         String    @db.Text

  // Vector embedding stored as JSON array (pgvector alternative for compatibility)
  // Will be converted to actual vector type when using pgvector extension
  embedding       Json?

  sourceUrl       String?
  effectiveDate   DateTime?
  lastVerified    DateTime  @default(now())

  chunkIndex      Int       @default(0)
  tokenCount      Int?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([jurisdictionId])
  @@index([documentId])
  @@index([chapter])
  @@index([section])
}

// ============================================================================
// COUNTY MODEL (for county-level GIS data)
// ============================================================================

model County {
  id              String       @id @default(cuid())
  name            String       // e.g., "Hamilton County"
  state           String       // e.g., "OH"
  fips            String?      // FIPS county code

  // GIS service URLs
  zoningServiceUrl   String?   // ArcGIS REST endpoint for zoning
  parcelServiceUrl   String?   // ArcGIS REST endpoint for parcels

  // Metadata
  population      Int?
  lastFetched     DateTime?
  dataQuality     String?      // "complete", "partial", "unavailable"

  // Relations
  zoningPolygons  ZoningPolygon[]
  jurisdictions   Jurisdiction[] @relation("CountyJurisdictions")

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@unique([name, state])
  @@index([state])
}

// ============================================================================
// ZONING DATA MODELS
// ============================================================================

// County-level zoning polygons (new - preferred approach)
model ZoningPolygon {
  id              String       @id @default(cuid())
  county          County       @relation(fields: [countyId], references: [id], onDelete: Cascade)
  countyId        String

  // Source identification
  sourceObjectId  String?      // Original OBJECTID from GIS

  // Zoning information
  zoneCode        String       // e.g., "R-1", "C-2", "B5"
  zoneDescription String?      // e.g., "Single Family Residential"

  // Additional fields from source (varies by county)
  township        String?      // For county-level data like Warren
  city            String?      // If available in source
  acres           Float?

  // Geographic data
  latitude        Float?       // Centroid
  longitude       Float?       // Centroid
  geometry        Json?        // GeoJSON polygon
  bbox            Json?        // Bounding box [minX, minY, maxX, maxY]

  // Metadata
  sourceUrl       String?
  rawProperties   Json?        // All original properties from GIS
  lastVerified    DateTime     @default(now())

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@unique([countyId, sourceObjectId])
  @@index([countyId])
  @@index([countyId, zoneCode])
  @@index([zoneCode])
}

// Legacy jurisdiction-level parcels (kept for backwards compatibility)
model ZoningParcel {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(name: "JurisdictionParcels", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  // Property identification
  address         String
  parcelId        String?      // City's parcel ID (if available)

  // Zoning information
  zoneCode        String       // e.g., "R-1", "C-2"
  zoneDescription String?      // e.g., "Single Family Residential"

  // Geographic data (optional)
  latitude        Float?
  longitude       Float?
  geometry        Json?        // GeoJSON polygon if available

  // Metadata
  sourceUrl       String?      // Link to city's zoning map
  lastVerified    DateTime     @default(now())

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([jurisdictionId])
  @@index([jurisdictionId, address])
  @@index([jurisdictionId, parcelId])
  @@index([zoneCode])
  @@unique([jurisdictionId, parcelId])
}

// ============================================================================
// OVERLAY DISTRICTS (Historic, Hillside, Urban Design, Flood, etc.)
// ============================================================================

model OverlayDistrict {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(name: "JurisdictionOverlays", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  // Overlay type
  overlayType     String       // "historic", "hillside", "urban_design", "flood", "landslide"
  name            String       // e.g., "Over-the-Rhine", "Mt. Adams Hillside"
  description     String?      // Additional details

  // Geographic data
  geometry        Json?        // GeoJSON polygon

  // Additional properties from source
  properties      Json?        // Raw properties from API

  // Metadata
  sourceUrl       String?
  lastVerified    DateTime     @default(now())

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([jurisdictionId])
  @@index([jurisdictionId, overlayType])
  @@index([overlayType])
}

// ============================================================================
// PERMIT REQUIREMENTS
// ============================================================================

model PermitRequirement {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(name: "JurisdictionPermits", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  // What activity this applies to
  activityType    String       // e.g., "fence", "shed", "deck", "addition", "demolition"
  activityDescription String?   // More detailed description
  category        String?      // "building", "trade", "commercial", "license", "public"

  // Zone-specific
  zonesRequired   Json?        // ["*"] for all, or specific zones
  zonesProhibited Json?        // Zones where not allowed

  // Permit details
  requiresPermit  Boolean      @default(true)
  permitType      String?      // e.g., "Building Permit", "Zoning Certificate"
  requiresPlans   Boolean      @default(false)
  requiresInspection Boolean   @default(false)

  // Requirements/restrictions (JSON for flexibility)
  requirements    Json?        // { "maxHeight": 6, "setback": 10, "lotCoverage": 0.3 }

  // Process details
  feeBase         Float?       // Base fee in dollars
  feePerSqft      Float?       // Additional fee per square foot
  processingDays  Int?         // Estimated processing time
  documents       String[]     // Required documents

  // Source information
  sourceUrl       String?
  ordinanceRef    String?      // Reference to ordinance section

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@unique([jurisdictionId, activityType])
  @@index([jurisdictionId])
  @@index([activityType])
  @@index([category])
}

// ============================================================================
// PERMIT EXEMPTIONS (work that doesn't require permit)
// ============================================================================

model PermitExemption {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  activity        String       // e.g., "fence_under_6ft", "shed_under_120sqft"
  description     String       // Human-readable description
  maxValue        Float?       // Maximum project value
  maxSqft         Int?         // Maximum square footage
  conditions      String?      // Additional conditions

  ordinanceRef    String?      // Reference to ordinance section

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([jurisdictionId])
  @@index([activity])
}

// ============================================================================
// COMMON QUESTIONS (FAQ-style answers)
// ============================================================================

model CommonQuestion {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  question        String       @db.Text
  category        String       // deck, fence, shed, home_occupation, etc.
  answer          String       @db.Text
  relatedPermits  Json?        // ["deck", "fence"] - related permit types
  ordinanceRef    String?

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([jurisdictionId])
  @@index([category])
}

// ============================================================================
// SUBSCRIPTION PLAN LIMITS
// ============================================================================

model PlanLimit {
  id                String    @id @default(cuid())
  planName          String    @unique  // free, pro, business, enterprise

  // Usage limits (-1 = unlimited)
  monthlyLookups    Int       @default(5)
  savedProperties   Int       @default(1)
  apiCallsMonthly   Int       @default(0)
  teamSeats         Int       @default(1)

  // Feature flags
  docUpload         Boolean   @default(false)
  pdfReports        Boolean   @default(false)
  bulkLookup        Boolean   @default(false)
  apiAccess         Boolean   @default(false)
  whiteLabel        Boolean   @default(false)
  prioritySupport   Boolean   @default(false)

  // Pricing
  priceMonthly      Decimal   @default(0) @db.Decimal(10, 2)
  priceYearly       Decimal   @default(0) @db.Decimal(10, 2)

  // Stripe price IDs
  stripePriceMonthly String?
  stripePriceYearly  String?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

// ============================================================================
// BUILDING CODE CHUNKS (Similar to ordinances)
// ============================================================================

model BuildingCodeChunk {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(name: "JurisdictionBuildingCodes", fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  codeType        String       // "IBC", "IRC", "local_amendment", "fire_code", "plumbing", "electrical"
  codeYear        String?      // e.g., "2021" for IBC 2021
  section         String
  title           String
  content         String       @db.Text

  // Vector embedding for semantic search
  embedding       Json?

  sourceUrl       String?
  s3PdfUrl        String?      // Link to PDF in S3

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([jurisdictionId])
  @@index([codeType])
  @@index([jurisdictionId, codeType])
}

// ============================================================================
// BUSINESS CHECKLISTS (step-by-step permit guides)
// ============================================================================

model BusinessChecklist {
  id              String       @id @default(cuid())
  jurisdiction    Jurisdiction @relation(fields: [jurisdictionId], references: [id], onDelete: Cascade)
  jurisdictionId  String

  // What type of business this applies to
  businessType    String       // restaurant, food_truck, bar, brewery, etc.
  checklistName   String       // e.g., "Restaurant Opening Checklist"
  description     String?      @db.Text

  // Checklist items stored as JSON array
  // [{ step: 1, title: "Get Food License", description: "...", category: "health", required: true, estimatedDays: 21, feeRange: "$250-350", links: [...] }]
  items           Json

  // Metadata
  totalSteps      Int          @default(0)
  estimatedDays   Int?         // Total estimated time to complete
  estimatedCost   String?      // Cost range, e.g., "$1,000 - $5,000"

  // User progress
  userProgress    UserChecklistProgress[]

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@unique([jurisdictionId, businessType])
  @@index([jurisdictionId])
  @@index([businessType])
}

// ============================================================================
// USER CHECKLIST PROGRESS (tracking user's progress on checklists)
// ============================================================================

model UserChecklistProgress {
  id              String           @id @default(cuid())
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  checklist       BusinessChecklist @relation(fields: [checklistId], references: [id], onDelete: Cascade)
  checklistId     String

  // Which business/project this is for
  projectName     String?          // e.g., "Joe's Pizza - Main St Location"
  businessAddress String?

  // Progress tracking - JSON object mapping step numbers to completion status
  // { 1: { completed: true, completedAt: "2024-01-15", notes: "..." }, 2: { completed: false } }
  progress        Json             @default("{}")

  // Overall status
  status          String           @default("not_started") // not_started, in_progress, completed
  startedAt       DateTime?
  completedAt     DateTime?

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@unique([userId, checklistId, projectName])
  @@index([userId])
  @@index([checklistId])
  @@index([status])
}

// ============================================================================
// AI EXTRACTION PIPELINE
// ============================================================================

model ExtractionJob {
  id              String    @id @default(cuid())
  jurisdictionId  String

  // Job info
  jobType         String    @default("full")  // 'full', 'zoning', 'permits', 'fees'
  status          String    @default("pending") // 'pending', 'scraping', 'extracting', 'review', 'approved', 'failed'
  progress        Int       @default(0)        // 0-100

  // Source URLs
  municodeUrl     String?
  gisUrl          String?
  feeScheduleUrl  String?

  // Scraped raw data
  scrapedData     Json?     // Raw HTML/text from sources

  // Extracted structured data
  extractedZones      Json?  // Array of zone objects
  extractedPermits    Json?  // Array of permit objects
  extractedFees       Json?  // Array of fee objects
  extractedCodes      Json?  // Array of building code chunks
  extractedQuestions  Json?  // Array of Q&A

  // Stats
  itemsFound       Int       @default(0)
  itemsNeedReview  Int       @default(0)
  confidenceScore  Float?    // 0.00 - 1.00

  // Review
  reviewedBy      String?   // User ID
  reviewedAt      DateTime?
  reviewNotes     String?   @db.Text

  // Errors
  errorMessage    String?
  errorDetails    Json?

  // Timestamps
  createdAt       DateTime  @default(now())
  startedAt       DateTime?
  completedAt     DateTime?

  // Relations
  items           ExtractionItem[]

  @@index([jurisdictionId])
  @@index([status])
}

model ExtractionItem {
  id              String    @id @default(cuid())
  jobId           String
  job             ExtractionJob @relation(fields: [jobId], references: [id], onDelete: Cascade)

  // Item info
  itemType        String    // 'zone', 'permit', 'fee', 'code', 'question'
  itemKey         String?   // 'SF-6', 'deck_permit', etc.

  // Extracted data
  extractedData   Json
  sourceText      String?   @db.Text  // Original text AI extracted from

  // Confidence
  confidence      String?   // 'high', 'medium', 'low'
  needsReview     Boolean   @default(false)

  // Review
  reviewStatus    String    @default("pending") // 'pending', 'approved', 'edited', 'rejected'
  editedData      Json?     // If admin made changes
  reviewedBy      String?   // User ID
  reviewedAt      DateTime?

  createdAt       DateTime  @default(now())

  @@index([jobId])
  @@index([itemType])
  @@index([needsReview, reviewStatus])
}

model AdminActivityLog {
  id          String    @id @default(cuid())
  userId      String?
  action      String    // 'started_extraction', 'approved_job', 'edited_item'
  targetType  String?   // 'job', 'item', 'jurisdiction'
  targetId    String?
  details     Json?
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}
